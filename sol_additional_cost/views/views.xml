<odoo>
  <data>
    <record id="view_account_payment_form" model="ir.ui.view">
      <field name="name">account.payment.register.form.inherited</field>
      <field name="model">account.payment.register</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='group2']/group[@name='bank_charge']" position="after">
          <group string="Additional Cost" name="additional_cost">
            <field name="is_additional_cost"/>
            <field name="additional_cost_account" attrs="{'invisible':[('is_additional_cost','=',False)]}"/>
            <field name="additional_cost" attrs="{'invisible':[('is_additional_cost','=',False)]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>