<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_asset_view_form_inherit_pause_checkbox" model="ir.ui.view">
        <field name="name">account.asset.view.form.inherit.pause.checkbox</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[@string='Depreciation Method']" position="inside">
                <field name="pause_dep_check" />
            </xpath>

            <xpath expr="button[@name='action_asset_pause']" position="replace">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'open'), ('asset_type', '!=', 'purchase'),('pause_dep_check', '=', False)]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>
